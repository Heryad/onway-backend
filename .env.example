# ============================================
# ONWAY BACKEND API - DEVELOPMENT
# ============================================
# Application configuration
# Copy this to .env in project root

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api/v1

# Database (matches infrastructure/.env)
DATABASE_URL=postgresql://onway_user:change_me_postgres_password_dev@localhost:5432/onway_db

# Redis (matches infrastructure/.env)
REDIS_URL=redis://:change_me_redis_password_dev@localhost:6379

# Typesense (matches infrastructure/.env)
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=change_me_typesense_key_dev

# File Storage - MinIO (matches infrastructure/.env)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=onway-uploads
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=change_me_minio_password_dev
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9000

# JWT Secrets (GENERATE THESE!)
# Run: openssl rand -base64 64
JWT_ACCESS_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_REFRESH_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Email Provider (Optional - configure when needed)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=noreply@onway.com

# SMS Provider (Optional - configure when needed)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091

# Logging
LOG_LEVEL=debug
